@model List<DinningTable>

<h1>Booked Slots</h1>

<table>
    <thead>
        <tr>
            <th>Table ID</th>
            <th>Seating Capacity</th>
            <th>Availability</th>
            <th>Bookings</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var table in Model)
        {
            <tr>
                <td>@table.DinningTableID</td>
                <td>@table.SeatingCapacity</td>
                <td>@(table.Availability ? "Available" : "Booked")</td>
                <td>
                    <ul>
                        @foreach (var booking in table.Bookings)
                        {
                            <li>@booking.ReservationDate.ToShortDateString() @booking.TimeSlot</li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Index", "Booking")">Make a Reservation</a><br>
<a href="@Url.Action("AvailableSlots", "Table")">View Available Slots</a>
